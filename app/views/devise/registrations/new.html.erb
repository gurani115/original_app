<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>新規アカウント作成</h2>
      <h5>Create Account</h5>
      <div >
        <%= image_tag('3892864_s.jpg', class:'registrations_image') %>
      </div>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            名前
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
             メールアドレス
          </div>
          <div class='field-input'>
            <%= f.email_field :email %>
          </div>
          <div class='field'>
          <div class='field-label'>
             社員番号
          </div>
          <div class='field-input'>
            <%= f.text_field :employee_number %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            パスワード
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            パスワード
            <i>(もう一度入れてください)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "アカウント作成", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
